<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RatingBarEjemplo">

    <!-- Texto que indica cuantas estrellas están seleccionadas -->
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 Estrellas"
        android:layout_gravity="center"
        android:textSize="50sp"
        android:layout_margin="50dp"
        android:textColor="@color/black"
        />

    <!-- Rating bar, numstars declara de cuantas estrellas es la barra, rating es
         cuantas estrellas están seleccionadas al cargar la actividad-->
    <RatingBar

        android:id="@+id/rtBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:numStars="5"
        android:rating="0"
        android:contentDescription="Rating"
        />

    <!-- Botón para volver -->
    <Button
        android:id="@+id/volverMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:text="Volver"
        android:backgroundTint="@color/black"

        />
</LinearLayout>